<h1>Listing assignments</h1>

<table>
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Assignee</th>
      <th>Complete</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_assignments.each do |ca| %>
      <tr>
        <td>
          <%= ca.title %>
        </td>
      </tr>
      <%= render partial: 'class_assignment', locals: {classassignment: ca} %>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Assignment', new_assignment_path %>

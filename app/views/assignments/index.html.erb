<h1>Listing assignments</h1>

<table>
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Assignee</th>
      <th>Complete</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.title %></td>
        <td><%= assignment.user.name %></td>
        <% if assignment.due_date < Date.today && !assignment.complete %>
          <td bgcolor="yellow"><%= assignment.complete %></td> <!-- ## KLUDGE -->
        <% else %>
          <td><%= assignment.complete %></td>
        <% end %>
        <td><%= assignment.link %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


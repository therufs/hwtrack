<p id="notice"><%= notice %></p>

<div class="row">
  <div class="small-4 column left">
    <strong>Name:</strong>
    <%= @user.name %>
  </div>

  <div class="small-4 column left">
    <strong>Email:</strong>
    <%= @user.email %><br><br> <!-- ## kludge! -->
  </div>
</div>

<div class="row">
  <div class="small-8 column">
  <strong>Outstanding assignments:</strong>
    <ul>
    <% outstanding_assignments.each do |a| %>
    <% if a.due_date < Date.today %>
      <li><div style="background:yellow"><%= a.title %>, due <%= a.due_date %></div></li> <!-- ## gross -->
    <% else %>
      <li><%= a.title %>, due <%= a.due_date %></li>
    <% end %>
    <% end %>
    </ul>
  </div>
</div>

<div class="row">
<div class="small-8 column">
    <strong>Completed assignments:</strong>
  <ul>
    <% completed_assignments.each do |a| %>
      <li><%= a.title %></li>
    <% end %>
  </ul>
</p>
</div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
